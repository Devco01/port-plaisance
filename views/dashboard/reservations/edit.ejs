<%- include('../../layouts/dashboard', { title: 'Modifier Réservation' }) %>

<div class="reservation-form">
    <div class="card">
        <div class="card-header">
            <h2>Modifier la Réservation</h2>
            <div class="header-actions">
                <a href="/dashboard/reservations" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
                <a href="/dashboard/reservations/<%= reservation._id %>" class="btn btn-primary">
                    <i class="fas fa-eye"></i> Voir les détails
                </a>
            </div>
        </div>

        <form action="/dashboard/reservations/<%= reservation._id %>" method="POST" class="form" id="reservationForm">
            <div class="form-grid">
                <div class="form-group">
                    <label>Catway</label>
                    <input 
                        type="text" 
                        value="<%= reservation.catwayNumber %> (<%= reservation.catwayType === 'long' ? 'Long' : 'Court' %>)"
                        disabled
                        class="form-control-plaintext"
                    >
                    <small class="text-muted">Le catway ne peut pas être modifié</small>
                </div>

                <div class="form-group">
                    <label for="clientName">Nom du client *</label>
                    <input 
                        type="text" 
                        id="clientName" 
                        name="clientName" 
                        value="<%= reservation.clientName %>"
                        required
                    >
                </div>

                <div class="form-group">
                    <label for="boatName">Nom du bateau *</label>
                    <input 
                        type="text" 
                        id="boatName" 
                        name="boatName" 
                        value="<%= reservation.boatName %>"
                        required
                    >
                </div>

                <div class="form-group">
                    <label for="boatLength">Longueur du bateau (m) *</label>
                    <input 
                        type="number" 
                        id="boatLength" 
                        name="boatLength" 
                        min="1"
                        step="0.1"
                        value="<%= reservation.boatLength %>"
                        max="<%= reservation.catwayType === 'long' ? '20' : '10' %>"
                        required
                    >
                </div>

                <div class="form-group">
                    <label for="startDate">Date de début *</label>
                    <input 
                        type="date" 
                        id="startDate" 
                        name="startDate" 
                        value="<%= formatInputDate(reservation.startDate) %>"
                        min="<%= formatInputDate(new Date()) %>"
                        required
                        onchange="updateEndDateMin()"
                    >
                </div>

                <div class="form-group">
                    <label for="endDate">Date de fin *</label>
                    <input 
                        type="date" 
                        id="endDate" 
                        name="endDate" 
                        value="<%= formatInputDate(reservation.endDate) %>"
                        required
                    >
                </div>

                <div class="form-group full-width">
                    <label for="notes">Notes</label>
                    <textarea 
                        id="notes" 
                        name="notes" 
                        rows="3"
                    ><%= reservation.notes || '' %></textarea>
                </div>
            </div>

            <div class="form-info">
                <div class="info-item">
                    <span class="info-label">Créée le:</span>
                    <span class="info-value"><%= formatDate(reservation.createdAt) %></span>
                </div>
                <div class="info-item">
                    <span class="info-label">Dernière modification:</span>
                    <span class="info-value"><%= formatDate(reservation.updatedAt) %></span>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Enregistrer les modifications
                </button>
                <button type="reset" class="btn btn-secondary">
                    <i class="fas fa-undo"></i> Réinitialiser
                </button>
            </div>
        </form>
    </div>
</div>

<script>
function updateEndDateMin() {
    const startDate = document.getElementById('startDate').value;
    document.getElementById('endDate').min = startDate;
}

document.getElementById('reservationForm').addEventListener('submit', function(e) {
    const startDate = new Date(document.getElementById('startDate').value);
    const endDate = new Date(document.getElementById('endDate').value);
    const boatLength = parseFloat(document.getElementById('boatLength').value);
    const maxLength = <%= reservation.catwayType === 'long' ? 20 : 10 %>;

    if (endDate <= startDate) {
        e.preventDefault();
        alert('La date de fin doit être postérieure à la date de début');
        return;
    }

    if (boatLength > maxLength) {
        e.preventDefault();
        alert(`La longueur du bateau ne peut pas dépasser ${maxLength}m pour ce type de catway`);
        return;
    }
});
</script>

<style>
/* Styles hérités du create.ejs */
.reservation-form {
    max-width: 800px;
    margin: 0 auto;
}

.header-actions {
    display: flex;
    gap: 1rem;
}

.form-control-plaintext {
    background-color: #f8f9fa;
    cursor: not-allowed;
}

.form-info {
    margin: 2rem 0;
    padding: 1rem;
    background: #f8f9fa;
    border-radius: 4px;
    display: flex;
    gap: 2rem;
}

.info-item {
    display: flex;
    gap: 0.5rem;
}

.info-label {
    font-weight: 500;
    color: #666;
}

.text-muted {
    color: #6c757d;
}
</style> 