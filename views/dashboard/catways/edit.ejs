<%- include('../../layouts/dashboard', { title: 'Modifier Catway' }) %>

<div class="catway-form">
    <div class="card">
        <div class="card-header">
            <h2>Modifier Catway <%= catway.catwayNumber %></h2>
            <div class="header-actions">
                <a href="/dashboard/catways" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
                <a href="/dashboard/catways/<%= catway.catwayNumber %>" class="btn btn-primary">
                    <i class="fas fa-eye"></i> Voir les détails
                </a>
            </div>
        </div>

        <form action="/dashboard/catways/<%= catway.catwayNumber %>" method="POST" class="form">
            <div class="form-grid">
                <div class="form-group">
                    <label>Numéro</label>
                    <input 
                        type="text" 
                        value="<%= catway.catwayNumber %>"
                        disabled
                        class="form-control-plaintext"
                    >
                    <small class="text-muted">Le numéro ne peut pas être modifié</small>
                </div>

                <div class="form-group">
                    <label>Type</label>
                    <input 
                        type="text" 
                        value="<%= catway.catwayType === 'long' ? 'Long' : 'Court' %>"
                        disabled
                        class="form-control-plaintext"
                    >
                    <small class="text-muted">Le type ne peut pas être modifié</small>
                </div>

                <div class="form-group">
                    <label for="catwayState">État *</label>
                    <select id="catwayState" name="catwayState" required>
                        <option value="disponible" <%= catway.catwayState === 'disponible' ? 'selected' : '' %>>Disponible</option>
                        <option value="maintenance" <%= catway.catwayState === 'maintenance' ? 'selected' : '' %>>Maintenance</option>
                        <option value="hors-service" <%= catway.catwayState === 'hors-service' ? 'selected' : '' %>>Hors service</option>
                    </select>
                </div>

                <div class="form-group full-width">
                    <label for="description">Description</label>
                    <textarea 
                        id="description" 
                        name="description" 
                        rows="3"
                    ><%= catway.description || '' %></textarea>
                    <small>Description optionnelle de l'état ou des particularités du catway</small>
                </div>
            </div>

            <div class="form-info">
                <div class="info-item">
                    <span class="info-label">Créé le:</span>
                    <span class="info-value"><%= formatDate(catway.createdAt) %></span>
                </div>
                <div class="info-item">
                    <span class="info-label">Dernière modification:</span>
                    <span class="info-value"><%= formatDate(catway.updatedAt) %></span>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Enregistrer les modifications
                </button>
                <button type="reset" class="btn btn-secondary">
                    <i class="fas fa-undo"></i> Réinitialiser
                </button>
            </div>
        </form>
    </div>
</div>

<style>
.header-actions {
    display: flex;
    gap: 1rem;
}

.form-control-plaintext {
    background-color: #f8f9fa;
    cursor: not-allowed;
}

.form-info {
    margin: 2rem 0;
    padding: 1rem;
    background: #f8f9fa;
    border-radius: 4px;
    display: flex;
    gap: 2rem;
}

.info-item {
    display: flex;
    gap: 0.5rem;
}

.info-label {
    font-weight: 500;
    color: #666;
}

.text-muted {
    color: #6c757d;
}

/* Styles hérités du create.ejs */
.catway-form {
    max-width: 800px;
    margin: 0 auto;
}

.form-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
}

/* ... autres styles existants ... */
</style> 