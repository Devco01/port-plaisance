<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Gestion des Catways</h1>
        <a href="/dashboard/catways/create" class="btn btn-primary">
            Nouveau Catway
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <% if (catways && catways.length > 0) { %>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Numéro</th>
                                <th>Type</th>
                                <th>État</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% catways.forEach(catway => { %>
                                <tr>
                                    <td><%= catway.catwayNumber %></td>
                                    <td><%= catway.catwayType %></td>
                                    <td>
                                        <span class="badge bg-<%= catway.catwayState === 'disponible' ? 'success' : 'warning' %>">
                                            <%= catway.catwayState %>
                                        </span>
                                    </td>
                                    <td>
                                        <a href="/dashboard/catways/<%= catway._id %>/edit" class="btn btn-sm btn-info">Modifier</a>
                                        <button 
                                            onclick="deleteCatway('<%= catway._id %>')" 
                                            class="btn btn-sm btn-danger">
                                            Supprimer
                                        </button>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <p class="text-center text-muted">Aucun catway disponible</p>
            <% } %>
        </div>
    </div>
</div>

<script>
async function deleteCatway(id) {
    if (confirm('Êtes-vous sûr de vouloir supprimer ce catway ?')) {
        try {
            const response = await fetch(`/api/catways/${id}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            if (response.ok) {
                window.location.reload();
            } else {
                alert('Erreur lors de la suppression');
            }
        } catch (error) {
            console.error('Erreur:', error);
            alert('Erreur lors de la suppression');
        }
    }
}
</script> 