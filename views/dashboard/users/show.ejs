<%- include('../../layouts/dashboard', { title: 'Détails Utilisateur' }) %>

<div class="user-details">
    <div class="card">
        <div class="card-header">
            <h2>Détails de l'Utilisateur</h2>
            <div class="header-actions">
                <a href="/dashboard/users" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
                <% if (currentUser.role === 'admin' || currentUser.email === user.email) { %>
                    <a href="/dashboard/users/<%= user.email %>/edit" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Modifier
                    </a>
                <% } %>
            </div>
        </div>

        <div class="details-grid">
            <div class="detail-section">
                <h3>Informations du compte</h3>
                
                <div class="detail-group">
                    <label>Nom d'utilisateur</label>
                    <div class="detail-value"><%= user.username %></div>
                </div>

                <div class="detail-group">
                    <label>Email</label>
                    <div class="detail-value"><%= user.email %></div>
                </div>

                <div class="detail-group">
                    <label>Rôle</label>
                    <div class="detail-value">
                        <span class="badge badge-<%= user.role %>">
                            <%= user.role === 'admin' ? 'Administrateur' : 'Utilisateur' %>
                        </span>
                    </div>
                </div>

                <div class="detail-group">
                    <label>Statut</label>
                    <div class="detail-value">
                        <span class="status-badge status-<%= user.active ? 'active' : 'inactive' %>">
                            <%= user.active ? 'Actif' : 'Inactif' %>
                        </span>
                    </div>
                </div>
            </div>

            <div class="detail-section">
                <h3>Activité récente</h3>
                
                <div class="detail-group">
                    <label>Dernière connexion</label>
                    <div class="detail-value">
                        <%= user.lastLogin ? formatDate(user.lastLogin) : 'Jamais connecté' %>
                    </div>
                </div>

                <div class="detail-group">
                    <label>Réservations créées</label>
                    <div class="detail-value">
                        <%= userStats.reservationsCount %> réservation(s)
                    </div>
                </div>

                <div class="detail-group">
                    <label>Dernière activité</label>
                    <div class="detail-value">
                        <%= userStats.lastActivity ? formatDate(userStats.lastActivity) : 'Aucune activité' %>
                    </div>
                </div>
            </div>
        </div>

        <% if (userStats.recentReservations && userStats.recentReservations.length > 0) { %>
            <div class="recent-activity">
                <h3>Dernières réservations</h3>
                <div class="table-container">
                    <table>
                        <thead>
                            <tr>
                                <th>Catway</th>
                                <th>Client</th>
                                <th>Dates</th>
                                <th>Statut</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% userStats.recentReservations.forEach(function(reservation) { %>
                                <tr>
                                    <td><%= reservation.catwayNumber %></td>
                                    <td><%= reservation.clientName %></td>
                                    <td>
                                        Du <%= formatDate(reservation.startDate) %>
                                        au <%= formatDate(reservation.endDate) %>
                                    </td>
                                    <td>
                                        <span class="status-badge status-<%= getReservationStatus(reservation) %>">
                                            <%= getReservationStatusLabel(reservation) %>
                                        </span>
                                    </td>
                                    <td>
                                        <a href="/dashboard/reservations/<%= reservation._id %>" class="btn btn-icon">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        <% } %>

        <div class="metadata">
            <div class="metadata-item">
                <i class="fas fa-clock"></i>
                <span>Compte créé le <%= formatDate(user.createdAt) %></span>
            </div>
            <div class="metadata-item">
                <i class="fas fa-history"></i>
                <span>Dernière modification le <%= formatDate(user.updatedAt) %></span>
            </div>
        </div>

        <% if (currentUser.role === 'admin' && currentUser.email !== user.email) { %>
            <div class="actions-footer">
                <button 
                    onclick="toggleUserStatus('<%= user.email %>', '<%= user.active %>')"
                    class="btn <%= user.active ? 'btn-warning' : 'btn-success' %>"
                >
                    <i class="fas fa-<%= user.active ? 'ban' : 'check' %>"></i>
                    <%= user.active ? 'Désactiver' : 'Activer' %> le compte
                </button>
                <button onclick="confirmDelete('<%= user.email %>')" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Supprimer l'utilisateur
                </button>
            </div>
        <% } %>
    </div>
</div>

<script>
function toggleUserStatus(email, currentStatus) {
    const action = currentStatus ? 'désactiver' : 'activer';
    if (confirm(`Êtes-vous sûr de vouloir ${action} cet utilisateur ?`)) {
        fetch(`/dashboard/users/${email}/toggle-status`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            }
        }).then(response => {
            if (response.ok) {
                window.location.reload();
            } else {
                alert(`Erreur lors de l'action`);
            }
        });
    }
}

function confirmDelete(email) {
    if (confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?')) {
        fetch(`/dashboard/users/${email}/delete`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            }
        }).then(response => {
            if (response.ok) {
                window.location.href = '/dashboard/users';
            } else {
                alert('Erreur lors de la suppression');
            }
        });
    }
}
</script>

<style>
.user-details {
    max-width: 1000px;
    margin: 0 auto;
}

.details-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    margin: 1.5rem 0;
}

.recent-activity {
    margin-top: 2rem;
}

.recent-activity h3 {
    margin-bottom: 1rem;
    color: var(--primary-color);
}

.actions-footer {
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid var(--border-color);
    display: flex;
    justify-content: flex-end;
    gap: 1rem;
}

@media (max-width: 768px) {
    .actions-footer {
        flex-direction: column;
    }

    .actions-footer .btn {
        width: 100%;
    }
}
</style> 