<%- include('../../layouts/dashboard', { title: 'Modifier Utilisateur' }) %>

<div class="user-form">
    <div class="card">
        <div class="card-header">
            <h2>Modifier l'Utilisateur</h2>
            <div class="header-actions">
                <a href="/dashboard/users" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
                <a href="/dashboard/users/<%= user.email %>" class="btn btn-primary">
                    <i class="fas fa-eye"></i> Voir les détails
                </a>
            </div>
        </div>

        <form action="/dashboard/users/<%= user.email %>" method="POST" class="form" id="userForm">
            <div class="form-grid">
                <div class="form-group">
                    <label for="username">Nom d'utilisateur *</label>
                    <input 
                        type="text" 
                        id="username" 
                        name="username" 
                        value="<%= user.username %>"
                        required
                        minlength="3"
                        maxlength="50"
                    >
                    <small>Entre 3 et 50 caractères</small>
                </div>

                <div class="form-group">
                    <label>Email</label>
                    <input 
                        type="email" 
                        value="<%= user.email %>"
                        disabled
                        class="form-control-plaintext"
                    >
                    <small class="text-muted">L'email ne peut pas être modifié</small>
                </div>

                <div class="form-group">
                    <label for="newPassword">Nouveau mot de passe</label>
                    <div class="password-input">
                        <input 
                            type="password" 
                            id="newPassword" 
                            name="newPassword"
                            minlength="8"
                            pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$"
                        >
                        <button type="button" class="btn-toggle-password" onclick="togglePassword('newPassword')">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <small>Laisser vide pour conserver le mot de passe actuel</small>
                </div>

                <div class="form-group">
                    <label for="confirmPassword">Confirmer le nouveau mot de passe</label>
                    <div class="password-input">
                        <input 
                            type="password" 
                            id="confirmPassword" 
                            name="confirmPassword"
                        >
                        <button type="button" class="btn-toggle-password" onclick="togglePassword('confirmPassword')">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                </div>

                <div class="form-group">
                    <label for="role">Rôle *</label>
                    <select id="role" name="role" required <%= currentUser.email === user.email ? 'disabled' : '' %>>
                        <option value="user" <%= user.role === 'user' ? 'selected' : '' %>>Utilisateur</option>
                        <option value="admin" <%= user.role === 'admin' ? 'selected' : '' %>>Administrateur</option>
                    </select>
                    <% if (currentUser.email === user.email) { %>
                        <small class="text-muted">Vous ne pouvez pas modifier votre propre rôle</small>
                    <% } %>
                </div>

                <div class="form-group">
                    <label class="checkbox-label">
                        <input 
                            type="checkbox" 
                            name="active" 
                            <%= user.active ? 'checked' : '' %>
                            <%= currentUser.email === user.email ? 'disabled' : '' %>
                        >
                        Compte actif
                    </label>
                    <% if (currentUser.email === user.email) { %>
                        <small class="text-muted">Vous ne pouvez pas désactiver votre propre compte</small>
                    <% } %>
                </div>
            </div>

            <div class="form-info">
                <div class="info-item">
                    <span class="info-label">Créé le:</span>
                    <span class="info-value"><%= formatDate(user.createdAt) %></span>
                </div>
                <div class="info-item">
                    <span class="info-label">Dernière modification:</span>
                    <span class="info-value"><%= formatDate(user.updatedAt) %></span>
                </div>
                <div class="info-item">
                    <span class="info-label">Dernière connexion:</span>
                    <span class="info-value">
                        <%= user.lastLogin ? formatDate(user.lastLogin) : 'Jamais connecté' %>
                    </span>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Enregistrer les modifications
                </button>
                <button type="reset" class="btn btn-secondary">
                    <i class="fas fa-undo"></i> Réinitialiser
                </button>
            </div>
        </form>
    </div>
</div>

<script>
function togglePassword(inputId) {
    const input = document.getElementById(inputId);
    const icon = input.nextElementSibling.querySelector('i');
    
    if (input.type === 'password') {
        input.type = 'text';
        icon.classList.replace('fa-eye', 'fa-eye-slash');
    } else {
        input.type = 'password';
        icon.classList.replace('fa-eye-slash', 'fa-eye');
    }
}

document.getElementById('userForm').addEventListener('submit', function(e) {
    const newPassword = document.getElementById('newPassword').value;
    const confirmPassword = document.getElementById('confirmPassword').value;

    if (newPassword && newPassword !== confirmPassword) {
        e.preventDefault();
        alert('Les mots de passe ne correspondent pas');
        return;
    }
});
</script>

<style>
/* Styles hérités du create.ejs */
.user-form {
    max-width: 800px;
    margin: 0 auto;
}

.header-actions {
    display: flex;
    gap: 1rem;
}

.form-control-plaintext {
    background-color: #f8f9fa;
    cursor: not-allowed;
}

.form-info {
    margin: 2rem 0;
    padding: 1rem;
    background: #f8f9fa;
    border-radius: 4px;
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
}

.info-item {
    display: flex;
    gap: 0.5rem;
}

.info-label {
    font-weight: 500;
    color: #666;
}

@media (max-width: 768px) {
    .form-info {
        flex-direction: column;
        gap: 1rem;
    }
}
</style> 