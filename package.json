{
  "name": "port-russell-api",
  "version": "1.0.0",
  "description": "API de gestion des r√©servations de catways pour le port de plaisance Russell",
  "main": "server/app.js",
  "scripts": {
    "test": "jest",
    "test:models": "jest tests/models",
    "test:auth": "jest tests/auth",
    "test:crud": "jest tests/crud",
    "start:server": "cd server && PORT=3001 node server.js",
    "dev:server": "cd server && PORT=3001 nodemon server.js",
    "start:client": "cd client && npm start",
    "dev:client": "cd client && npm run dev",
    "import-data": "node server/scripts/importData.js",
    "start": "PORT=3001 node server/server.js",
    "build": "cd client && npm install && npm run build",
    "postinstall": "npm run build && node -e \"console.log('Environment check:', process.env)\"",
    "check-admin": "node server/scripts/checkAdmin.js",
    "dev": "PORT=3001 nodemon server/server.js"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup/setup.js"
    ],
    "globalTeardown": "<rootDir>/tests/setup/teardown.js",
    "collectCoverageFrom": [
      "server/**/*.js",
      "!server/config/**",
      "!server/docs/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "verbose": true
  },
  "keywords": [],
  "author": "Votre nom",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/material": "^6.4.2",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.13.0",
    "mongoose": "^7.0.3",
    "react-icons": "^5.4.0",
    "react-router-dom": "^7.1.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.2",
    "cookie-parser": "^1.4.6",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "nodemon": "^3.1.9"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
